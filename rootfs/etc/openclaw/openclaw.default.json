{
    "gateway": {
        "mode": "local",
        "bind": "loopback",
        "controlUi": {
            "allowInsecureAuth": true
        }
    },
    "plugins": {
        "enabled": true,
        "entries": {
            "whatsapp": {
                "enabled": true
            },
            "telegram": {
                "enabled": true
            },
            "signal": {
                "enabled": true
            },
            "discord": {
                "enabled": true
            }
        }
    },
    "models": {
        "mode": "merge",
        "providers": {
            "gemini": {
                "baseUrl": "https://generativelanguage.googleapis.com/v1beta/openai",
                "apiKey": "${GEMINI_API_KEY}",
                "api": "openai-completions",
                "models": [
                    {
                        "id": "gemini-3.1-pro-preview",
                        "name": "Gemini 3.1 Pro",
                        "reasoning": true,
                        "input": [
                            "text",
                            "image"
                        ],
                        "contextWindow": 1048576,
                        "maxTokens": 65536
                    }
                ]
            }
        }
    },
    "agents": {
        "defaults": {
            "model": {
                "primary": "gemini/gemini-3.1-pro-preview"
            }
        }
    }
}